{
    "name": "Get document.title",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "scripting", "activeTab","storage"
    ],
    "host_permissions": ["https://leetcode.com/*"],
    "content_scripts": [
      {
        "matches": ["https://leetcode.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  
